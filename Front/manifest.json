{
  "manifest_version": 3,
  "name": "Magic Pocket",
  "version": "1.0",
  "description": "Record text and screenshots from web pages",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "desktopCapture",
    "unlimitedStorage"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/html2canvas.min.js",
        "src/utils/storage.js",
        "src/utils/imageStorage.js",
        "src/content/contextMenu.js",
        "src/content/floatingWindow.js",
        "src/content/screenshot.js",
        "src/content/intentVisualization.js",
        "src/content/content.js"
      ],
      "css": [
        "styles/styles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "records.html", 
        "records.js", 
        "src/utils/imageStorage.js",
        "start_generation.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "src/options/options.html"
  }
}
