{
  "manifest_version": 3,
  "name": "Magic Pocket",
  "version": "1.0",
  "description": "Record text and screenshots from web pages",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "type": "module",
      "css": [
        "styles.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["records.html", "records.js", "start_generation.html"],
      "matches": ["<all_urls>"]
    }
  ]
}